<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="5dp"
        android:textSize="20dp"
        android:text="Wybierz ilość talii."/>


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/one"
            android:layout_weight="1"
            android:onClick="onClickRelative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/card_back_01"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1"
                android:textSize="@dimen/size_text_in_card"
                android:shadowColor="#7F000000"
                android:shadowRadius="4"
                android:shadowDx="10"
                android:shadowDy="10"
                android:textColor="#fff" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/two"
            android:onClick="onClickRelative"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/card_back_01"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2"
                android:textSize="@dimen/size_text_in_card"
                android:shadowColor="#7F000000"
                android:shadowRadius="4"
                android:shadowDx="10"
                android:shadowDy="10"
                android:textColor="#fff" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">


        <RelativeLayout
            android:id="@+id/three"
            android:onClick="onClickRelative"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/card_back_01"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="3"
                android:textSize="@dimen/size_text_in_card"
                android:shadowColor="#7F000000"
                android:shadowRadius="4"
                android:shadowDx="10"
                android:shadowDy="10"
                android:textColor="#fff" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/four"
            android:onClick="onClickRelative"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/card_back_01"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="4"
                android:textSize="@dimen/size_text_in_card"
                android:shadowColor="#7F000000"
                android:shadowRadius="4"
                android:shadowDx="10"
                android:shadowDy="10"
                android:textColor="#fff" />

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/five"
        android:onClick="onClickRelative"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        >

        <ImageView
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/card_back_01"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="5"
            android:textSize="@dimen/size_text_in_card"
            android:shadowColor="#7F000000"
            android:shadowRadius="4"
            android:shadowDx="10"
            android:shadowDy="10"
            android:textColor="#fff" />

    </RelativeLayout>



</LinearLayout>